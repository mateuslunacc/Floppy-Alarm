<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="projetoes.com.floppyalarm.WakeUpActivity"
    android:background="@android:color/black">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/alarmLabel"
            android:id="@+id/alarmLabel"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/alarmTime"
            android:id="@+id/time"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_below="@+id/alarmLabel"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/abc_text_size_display_3_material" />

    </RelativeLayout>

    <projetoes.com.floppyalarm.SquaredRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/floppy_puzzle"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pieces">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:measureWithLargestChild="false"
                android:weightSum="5"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/topSideColor0"
                    android:layout_weight="1"
                    android:background="@color/greenColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/topSideColor1"
                    android:layout_weight="1"
                    android:background="@color/greenColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/topSideColor2"
                    android:layout_weight="1"
                    android:background="@color/greenColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/leftSideColor0"
                    android:layout_weight="1"
                    android:background="@color/redColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/faceColor00"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/faceColor01"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/faceColor02"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rightSideColor0"
                    android:layout_weight="1"
                    android:background="@color/orangeColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/leftSideColor1"
                    android:layout_weight="1"
                    android:background="@color/redColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/faceColor10"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/faceColor11"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/faceColor12"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rightSideColor1"
                    android:layout_weight="1"
                    android:background="@color/orangeColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/leftSideColor2"
                    android:layout_weight="1"
                    android:background="@color/redColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/faceColor20"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/faceColor21"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/faceColor22"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rightSideColor2"
                    android:layout_weight="1"
                    android:background="@color/orangeColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="5"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bottomSideColor0"
                    android:layout_weight="1"
                    android:background="@color/blueColor"
                    android:adjustViewBounds="false"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bottomSideColor1"
                    android:layout_weight="1"
                    android:background="@color/blueColor"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bottomSideColor2"
                    android:layout_weight="1"
                    android:background="@color/blueColor"
                    android:layout_margin="5dp" />
            </TableRow>
        </TableLayout>
    </projetoes.com.floppyalarm.SquaredRelativeLayout>

</RelativeLayout>
