<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TUTORIAL FLOPPY ALARM"
                android:id="@+id/CabecalhoTextView"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="25sp"
                android:typeface="sans"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="It&apos;s pretty easy to solve."
                android:id="@+id/Linha1TextView"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:typeface="sans"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="You do the following steps:"
                android:id="@+id/Linha2TextView"
                android:gravity="center"
                android:textColor="#000000"
                android:typeface="sans"
                android:textSize="18sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Intuitively orient the corners in relation to the centre (should only take one move at maximum, but knowledge of edge orientation algs can allow you to orient the corners in a way to skip step 3)."
                android:id="@+id/Linha3TextView"
                android:textSize="18sp"
                android:typeface="sans"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_marginTop="2dp" />

            <ImageView
                android:layout_width="183dp"
                android:layout_height="183dp"
                android:id="@+id/Caso1ImageView"
                android:layout_below="@id/Linha3TextView"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/nbn"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Algorithmically, orient the edges."
                android:id="@+id/Linha4TextView"
                android:gravity="center"
                android:textColor="#000000"
                android:typeface="sans"
                android:textSize="18sp"
                android:layout_marginTop="6dp" />

            <ImageView
                android:layout_width="183dp"
                android:layout_height="183dp"
                android:id="@+id/caso2ImageView"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/Linha4TextView"
                android:src="@drawable/image3366"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="If the last four sides are not completed, execute a single algorithm to finish off the puzzle."
                android:id="@+id/Linha5TextView"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:typeface="sans"
                android:layout_marginTop="6dp" />

            <ImageView
                android:layout_width="183dp"
                android:layout_height="183dp"
                android:id="@+id/caso3ImageView"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/Linha5TextView"
                android:src="@drawable/image3377"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="This is plenty to solve the cube, and can get you descent times."
                android:id="@+id/Linha6TextView"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="18sp"
                android:typeface="sans"
                android:gravity="center"
                android:layout_marginTop="6dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
